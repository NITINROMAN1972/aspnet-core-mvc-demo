
@model Election_PMS.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <div class="card col-md-4 p-3 mx-auto mt-5 border shadow-lg rounded-5">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Display Name</label>
                    <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
                </div>
                <button type="submit" class="btn btn-primary rounded-1 mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>